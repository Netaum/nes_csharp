<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="NesUI.MainWindow"
        Title="NesUI"
        Foreground="{DynamicResource Theme_TextBrush}" 
        Width="1020" 
        Height="800"
        CanResize="False"
        KeyDown="OnKeyDown">
    <Grid Background="Blue" Name="MainGrid">
        <Image Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="512" Height="480" Name="EmulatorWindow" /> 
        <Image Margin="0,510,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="128" Height="128" Name="PatternTable0" /> 
        <Image Margin="240,510,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="128" Height="128" Name="PatternTable1" /> 
        <TextBlock Text="STATUS: N V - B D I Z C" Name="EmulatorInformation" Foreground="White" FontFamily="Courier New" FontSize="14" Margin="512,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="800" />

        <Rectangle Name="Palette0" Margin="0,480,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="30" Fill="LightGray" StrokeThickness="2" >
            <Rectangle.Stroke>
                <SolidColorBrush Color="Red" />
            </Rectangle.Stroke>
        </Rectangle> 
        <Rectangle Name="Palette1" Margin="60,480,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="30" Stroke="Gray" Fill="LightGray" StrokeThickness="1" /> 
        <Rectangle Name="Palette2" Margin="120,480,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="30" Stroke="Gray" Fill="LightGray" StrokeThickness="1" /> 
        <Rectangle Name="Palette3" Margin="180,480,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="30" Stroke="Gray" Fill="LightGray" StrokeThickness="1" /> 
        <Rectangle Name="Palette4" Margin="240,480,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="30" Stroke="Gray" Fill="LightGray" StrokeThickness="1" /> 
        <Rectangle Name="Palette5" Margin="300,480,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="30" Stroke="Gray" Fill="LightGray" StrokeThickness="1" /> 
        <Rectangle Name="Palette6" Margin="360,480,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="30" Stroke="Gray" Fill="LightGray" StrokeThickness="1" /> 
        <Rectangle Name="Palette7" Margin="420,480,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="30" Stroke="Gray" Fill="LightGray" StrokeThickness="1" /> 
    </Grid>
    
</Window>
